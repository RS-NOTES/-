\begin{document}

\section{Title}

\subsection{Subtitle}


\Definition{
This is a Definition
}

\Proposition{
This is a proposition
}

Proof: Write down  the proof.~$\blacksquare$

\Lemma{
This is a Lemma
}

\Theorem{
This is a Theorem
}

Proof: Write down  the proof.~$\blacksquare$

\hspace*{\fill}

\textcolor{blue}{\textbf{\underline{Remark}}}: Write your remark.

\Corollary{
This is a corollary
}





\end{document}
