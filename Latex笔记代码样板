}

\NewTotalTColorBox[auto counter]{\Theorem}{ +m }{ 
	notitle,
	colback=red!10!white,
	frame hidden,
	boxrule=0pt,
	enhanced,
	sharp corners,
	borderline west={4pt}{0pt}{red!100!black},
